<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:minHeight="@dimen/list_item_height">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/margin22"
        android:layout_marginLeft="@dimen/margin11"
        android:layout_width="@dimen/list_image_height"
        android:layout_height="@dimen/list_image_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin16"
        android:paddingRight="@dimen/margin11"
        android:id="@+id/text_container" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/title_text_view"
                style="@style/TitleTextStyle"
                tools:text="@string/tosee_title_zoo" />

            <TextView
                android:id="@+id/summary_text_view"
                style="@style/SummaryTextStyle"
                tools:text="@string/tosee_summary_zoo" />

            <ImageView
                android:id="@+id/icon"
                android:paddingTop="@dimen/margin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>